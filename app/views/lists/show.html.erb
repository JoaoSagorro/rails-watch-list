<div class="mt-5">
  <h1 class="d-flex justify-content-center"><%= @list.name %></h1>

  <div class="container mt-4">
    <div class="row justify-content-evenly">
      <% @list.bookmarks.each do |bookmark| %>
          <div class="col-md-6 m-3 card" style="width: 18rem;">
            <%= image_tag(bookmark.movie.poster_url) %>
            <%# <img src="..." class="card-img-top" alt="..."> %>
            <div class="card-body">
              <h5 class="card-title"><%= bookmark.movie.title %></h5>
              <p class="card-text"><%= bookmark.movie.overview %></p>
              <%= link_to 'Delete movie', bookmark_path(bookmark), class: 'btn btn-primary align-items-end', data: { turbo_method: :delete}%>
            </div>
          </div>
      <% end %>
    </div>
  </div>


  <div class="row justify-content-center">
    <div class="col-md-6 my-4">
      <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.input :comment%>
          <%= f.association :movie%>
          <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
